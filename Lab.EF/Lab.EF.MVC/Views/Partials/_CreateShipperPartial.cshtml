@model Lab.EF.MVC.Models.ShippersView

@using (Html.BeginForm("Insert", "Shippers", FormMethod.Post, new { id = "shipperFormModal" }))
{
    <div class="form-group">
        @Html.LabelFor(shipper => shipper.CompanyName)
        @Html.TextBoxFor(shipper => shipper.CompanyName, new { @class = "form-control", id = "CompanyNameModal" })
    </div>

    <div class="form-group">
        @Html.LabelFor(shipper => shipper.Phone)
        @Html.TextBoxFor(shipper => shipper.Phone, new { @class = "form-control", type = "number", pattern = "[0-9]*", id = "PhoneModal" })
    </div>

    <!-- Botón para enviar el formulario desde el modal -->
    <button type="submit" class="btn btn-primary" id="submitButtonModal">Guardar</button>
}
