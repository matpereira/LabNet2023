@model Lab.EF.MVC.Models.ShippersView

@{
    ViewBag.Title = "Insert Page";
}

<h1>Agregar Shipper</h1>

@using (Html.BeginForm("Insert", "Shippers", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(shipper => shipper.CompanyName)
        @Html.TextBoxFor(shipper => shipper.CompanyName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(shipper => shipper.Phone)
        @Html.TextBoxFor(shipper => shipper.Phone, new { @class = "form-control", type = "number", pattern = "[0-9]*" })
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
}